<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sign_up_sign_in_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    android:elevation="4dp"
    android:padding="2dp"
    tools:targetApi="lollipop">

    <LinearLayout
        android:id="@+id/welcome_button_container"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:weightSum="2.5"
        tools:targetApi="lollipop">

        <Button
            android:id="@+id/bSignIn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:layout_weight="1.25"
            android:background="#000"
            android:text="@string/sign_in"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#f1ae1f"
            android:textSize="24sp" />

        <Button
            android:id="@+id/bSignUp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_weight="1.25"
            android:background="#000"
            android:text="@string/sign_up"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#f1ae1f"
            android:textSize="24sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="204dp"
        android:layout_height="204dp"
        android:layout_above="@+id/text_view_n"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:src="@drawable/n_logo" />

    <TextView
        android:id="@+id/text_view_n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/text_view_prime"
        android:gravity="center"
        android:text="N"
        android:textColor="#030303"
        android:textSize="72sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_prime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/app_logo"
        android:layout_centerVertical="true"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:text="prime"
        android:textColor="#785397"
        android:textSize="56sp"
        android:textStyle="italic" />

</RelativeLayout>